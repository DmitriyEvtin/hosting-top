generator client {
  provider = "prisma-client-js"
  output   = "../src/shared/api/database/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  name            String?
  role            UserRole  @default(USER)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime         @updatedAt
  emailVerified    DateTime?
  image           String?
  password        String?
  accounts        Account[]
  sessions        Session[]
  
  // Связи с дилерами
  managedDealers   Dealer[] @relation("DealerManager")
  createdDealers   Dealer[] @relation("DealerCreatedBy")
  updatedDealers  Dealer[] @relation("DealerUpdatedBy")

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}


model City {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Связи
  dealers   Dealer[]

  @@map("cities")
}

model Holding {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Связи
  dealers   Dealer[]

  @@map("holdings")
}

model Dealer {
  id                    String   @id @default(cuid())
  name                   String   // Название компании дилера (обязательное)
  holdingId              String?  // ID связи с холдингом
  cityId                 String?  // ID связи с городом
  dealerType             DealerType @default(VIP) // Тип дилера
  totalSales             Decimal? @db.Decimal(15, 2) // Общая сумма продаж
  balance                Decimal? @db.Decimal(15, 2) // Дебиторская задолженность
  managerId              String?  // ID ответственного менеджера
  cooperationStartDate   DateTime? // Дата начала сотрудничества
  lastVisitDate          DateTime? // Дата последнего посещения
  
  // Аудит
  createdById             String?  // Кто создал
  updatedById             String?  // Кто последний изменил
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  
  // Связи
  holding                Holding? @relation(fields: [holdingId], references: [id])
  city                   City?    @relation(fields: [cityId], references: [id])
  manager                User?    @relation("DealerManager", fields: [managerId], references: [id])
  createdBy               User?    @relation("DealerCreatedBy", fields: [createdById], references: [id])
  updatedBy               User?    @relation("DealerUpdatedBy", fields: [updatedById], references: [id])

  @@map("dealers")
}

enum DealerType {
  VIP
  STANDARD
  PREMIUM
}

enum UserRole {
  ADMIN
  USER
  MODERATOR
  MANAGER
}

