# ===========================================
# Паркет CRM - PRODUCTION ПЕРЕМЕННЫЕ
# ===========================================

# ===========================================
# ОСНОВНЫЕ НАСТРОЙКИ ПРИЛОЖЕНИЯ
# ===========================================
NODE_ENV="production"
APP_NAME="Hosting Top"
APP_VERSION="1.0.0"

# ===========================================
# БАЗА ДАННЫХ
# ===========================================
# PostgreSQL подключение
POSTGRES_DB="parket_crm"
POSTGRES_USER="parket_crm_user"
POSTGRES_PASSWORD="your-secure-password-here"

# ===========================================
# REDIS (КЭШИРОВАНИЕ И СЕССИИ)
# ===========================================
REDIS_URL="redis://redis:6379"

# ===========================================
# АУТЕНТИФИКАЦИЯ (NextAuth.js)
# ===========================================
NEXTAUTH_SECRET="your-production-secret-key-here-must-be-secure"
NEXTAUTH_URL="https://parket-crm.ru"

# OAuth провайдеры
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Российские OAuth провайдеры
VK_CLIENT_ID="your-vk-client-id"
VK_CLIENT_SECRET="your-vk-client-secret"
OK_CLIENT_ID="your-ok-client-id"
OK_CLIENT_SECRET="your-ok-client-secret"
MAIL_CLIENT_ID="your-mail-client-id"
MAIL_CLIENT_SECRET="your-mail-client-secret"
YANDEX_CLIENT_ID="your-yandex-client-id"
YANDEX_CLIENT_SECRET="your-yandex-client-secret"

# ===========================================
# AWS S3 (ХРАНЕНИЕ ИЗОБРАЖЕНИЙ)
# ===========================================
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket-name"

# CloudFront CDN
CLOUDFRONT_DOMAIN="your-cloudfront-domain.cloudfront.net"

# ===========================================
# МОНИТОРИНГ И ЛОГИРОВАНИЕ
# ===========================================
# Sentry DSN для серверной части
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
# Sentry DSN для клиентской части (публичный)
NEXT_PUBLIC_SENTRY_DSN="https://your-public-sentry-dsn@sentry.io/project-id"
# Sentry организация и проект
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-sentry-project"
LOG_LEVEL="info"

# ===========================================
# EMAIL (УВЕДОМЛЕНИЯ)
# ===========================================
SMTP_HOST="your-smtp-host"
SMTP_PORT="587"
SMTP_USER="your-smtp-user"
SMTP_PASSWORD="your-smtp-password"
SMTP_FROM="noreply@parket-crm.ru"

# ===========================================
# БЕЗОПАСНОСТЬ
# ===========================================
CORS_ORIGIN="https://parket-crm.ru"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW_MS="900000"

# ===========================================
# DOCKER REGISTRY
# ===========================================
REGISTRY_URL="registry.evtin.ru"
IMAGE_NAME="parket_crm"
IMAGE_TAG="latest"

# ===========================================
# АДМИНИСТРАТОР ПО УМОЛЧАНИЮ
# ===========================================
# Настройки для создания первого администратора
ADMIN_EMAIL="admin@parket-crm.ru"
ADMIN_PASSWORD="your-secure-admin-password"
ADMIN_NAME="Администратор"
